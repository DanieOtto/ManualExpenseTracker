<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ManualExpenseTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ManualExpenseTracker.Pages"
    Title="ManualExpenseTracker">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Input"
        ContentTemplate="{DataTemplate pages:InputPage}"
        Route="InputPage" />
    
</Shell>
